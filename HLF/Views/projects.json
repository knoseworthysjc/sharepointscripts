{
    "schema": "https://developer.microsoft.com/json-schemas/sp/view-formatting.schema.json",
    "hideSelection": false,
    "hideColumnHeader": true,
    "rowFormatter":{
        "elmType":"div",
        "attributes":{
            "class":"sp-row-card"
        },
        "children":[
          {
              "elmType":"div",
              "style":{"text-align":"left","min-width":"200px"},
              "children":[
                  {
                    "elmType": "div",
                    "attributes": {
                      "class": "sp-row-title"
                    },
                    "txtContent": "[$project.label]"
                  },
                  {
                    "elmType": "div",
                    "attributes": {
                      "class": "sp-row-listPadding"
                    },
                    "txtContent": "[$startdate]"
                  },
                  {
                    "elmType": "div",
                    "attributes": {
                      "class": "sp-row-listPadding"
                    },
                    "txtContent": "[$Template]"
                  }
              ]
            }  
        ]
    }
}